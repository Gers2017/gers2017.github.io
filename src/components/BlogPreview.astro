---
export interface Props {
    title: string;
    description: string;
    date: string;
    url: string;
}

const { title, description, date, url } = Astro.props as Props
---

<section class="link-parent column">
    <header class="row">
        <a href={url}>
            <h2 class="link">{title}</h2>
        </a>
        <time>{date}</time>
    </header>
    <p>{description}</p>
    <a href={url}>
        <button>Read more</button>
    </a>
</section>

<style>
    section {
        border: 1px var(--color-primary) solid;
        padding: 0.5rem 1rem;
        transition: all 0.2s cubic-bezier(.17, .84, .44, 1);
    }

    section.link-parent:hover {
        transform: scale(1.05);
        box-shadow: 8px 4px 0px var(--color-primary-transparent);
    }

    h2,
    p,
    time {
        margin: 0;
    }

    a {
        width: max-content;
    }
</style>