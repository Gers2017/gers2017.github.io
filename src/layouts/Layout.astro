---
import "../styles/global.css";
import BaseHead from "../components/BaseHead.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { BlogMeta, merge_with_title } from "../_constants";
import type { LayoutProps } from "../_types";

const props = Astro.props as LayoutProps;
const title = props.title ? merge_with_title(props.title) : BlogMeta.title;
const description = props.description
    ? merge_with_title(props.description)
    : BlogMeta.description;
---

<html lang="en">
    <head>
        <BaseHead title={title} description={description} />
    </head>

    <body>
        <Navbar />
        <main>
            <slot />
        </main>
        <Footer author={BlogMeta.author} />
        <style>
            main {
                min-height: 80vh;
            }
        </style>
    </body>
</html>
