---
import Layout from "./Layout.astro";
export interface Props {
    content: {
        title: string;
        description: string;
        date: string;
        author: string;
    }
}

const { content } = Astro.props as Props;
const { title, description, date, author } = content;

---

<Layout title={title} description={description}>
    <div class="blog">
        <header class="column small">
            <h1>{title}</h1>
            <div class="smug row">
                <span>&rarr; By {author} Posted on <time>{date}</time></span>
            </div>
        </header>
        <!-- Markdown content here -->
        <slot />
    </div>
</Layout>